@using InternetSP.Models
@model List<Packge>
@{
    ViewData["Title"] = "Internet Service Provider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pkg-title">
     <span>Packges Pricing</span>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card card-hover">
                   <img class="card-img-top" src="~/Images/@item.Img" alt="Card image">
                <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text"><span>Price:</span> @item.Price</p>
                    <a asp-area="" asp-controller="Packge" asp-action="View" asp-route-id="@item.Id" class="btn btn-success">See Detail</a>
                </div>
            </div>
        </div>       
    }
</div>